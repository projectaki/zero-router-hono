{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        // "declaration": true,
        // "composite": true,
        // "sourceMap": true,
        // "declarationMap": true
    },
    "exclude": [
        "node_modules",
    ]
}